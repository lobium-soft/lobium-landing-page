include ../wave/_wave
include ../quote/_quote

// Testimonials
section.section.section-lg.bg-gradient-blue-aqua.text-center.position-relative.pb-4
	+wave-1
	.container
		.context-dark( data-animate!={ class: 'fadeInUp' } )
			h2 Recent testimonials by
				| #[br.d-none.d-md-block]
				| our clients
			p.lead Look at what our clients have to say about our digital marketing solutions.
		.row.row-offset-md.justify-content-center
			.col-xl-10: .mx-3
				// Owl Carousel
				.owl-carousel.owl-visible(
					data-owl={
						margin: 20,
						slideTransition: 'linear',
						autoplayTimeout: 4500,
						autoplaySpeed: 4500,
						responsive: {
							768: {
								items: 2
							}
						}
					}
				)
					+quote-boxed({
						text:     'Lintense are a pleasure to work with. They really have their fingers on the pulse when it comes to digital marketing.',
