include  ../blurb/_blurb
include  ../lin-icon/_lin-icon
include  ../button/_button

// How It Works
section#about.section.section-lg.bg-transparent
	.container
		.row.justify-content-center.text-center
			.col-lg-10.col-xl-8( data-animate!={ class: 'fadeInUp' } )
				h2 Easily track your expenses
				p.lead Thanks to Lintense App, controlling your regular incomes, expenses, and transactions is now easier than ever before. Just add your credit card and you are ready to go!
		.row.row-30.align-items-center.justify-content-center.justify-content-xxl-start
			.col-xs-6.col-md-5.col-lg-7( data-animate!={ class: 'fadeInUp' } )
				+img( 'image-19-660x675.png' )
			.col-md-7.col-md-7.col-lg-5.col-xxl-4( data-animate!={ class: 'fadeInUp' } )
				h3 How it works
				.blurb-creative-group
					+blurb-creative({
						media: 'media-md align-items-center',
						title: 'Connect your credit cards/wallets',
						text: 'Our app supports all major credit cards and cryptocurrency wallets, allowing you to control all kinds of finances.'
					})
						+lin-idea.lin-md.blurb-creative-icon-svg
					+blurb-creative({
						media: 'media-md align-items-center',
						title: 'Set your budgets & savings goals',
						text: 'You can set up as many budgets you need for any kind of combination of accounts, categories or labels.'
					})
						+lin-mobile.lin-md.blurb-creative-icon-svg
					+blurb-creative({
						media: 'media-md align-items-center',
						title: 'Record your debts',
						text: 'Whenever you borrow or lend money, track the debt including the agreed payment due date.'
					})
						+lin-trophy.lin-md.blurb-creative-icon-svg

				+button-store