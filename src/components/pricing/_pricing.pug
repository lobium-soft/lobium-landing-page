//- Pricing
	@param {string} data.headClass - pricing head style
	@param {string} [data.badge] - pricing badge
	@param {object} data.title - pricing title
	@param {object} data.price - pricing price per month
	@param {object} data.priceYear - pricing price per year
	@param {object} data.subtitle - pricing subtitle
mixin pricing( data )
	// Pricing
	article.pricing&attributes( attributes )
		.pricing-head( class= data.headClass )
			if( data.badge )
				span.badge.pricing-badge
					if( data.badgeYear )
						span.pricing-month= data.badge
						span.pricing-year= data.badgeYear
					else
						= data.badge
			.pricing-title.h4!= data.title
			.pricing-price.h1
				if( data.priceYear )
					span.pricing-month= '$' + data.price
					span.pricing-year= '$' + data.priceYear
				else
					= '$' + data.price
			.pricing-subtitle
				if( data.priceYear )
					span.pricing-month per month
					span.pricing-year per year
				else
					| per month
		.pricing-body
			block
			.pricing-btn
				a.btn.btn-round.btn-secondary.btn-nuka( href='#' ) Order Now
					span.btn-overlay
